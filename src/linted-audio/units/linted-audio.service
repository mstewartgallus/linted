[Unit]
Description=Linted-Audio Game Audio
Documentation='man:linted-audio(6)'

[Service]
# ExecStart="${LINTED_AUDIO}"

ExecStart="/boot/linted-audio"

NoNewPrivileges=true
X-LintedCloneFlags=CLONE_NEWUSER CLONE_NEWPID CLONE_NEWNET CLONE_NEWNS

X-LintedFstab="${LINTED_AUDIO_FSTAB}"
WorkingDirectory=/var

Priority=1

X-LintedEnvironmentWhitelist=LINTED_AUDIO
X-LintedEnvironmentWhitelist=XDG_RUNTIME_DIR
