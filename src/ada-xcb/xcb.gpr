with "shared.gpr";
with "libc.gpr";

project XCB is
  for Library_Name use "XCB";
  for Library_Kind use Shared'Library_Kind;

  for Languages use ("Ada");
  for Source_Dirs use ("src");

  for Object_Dir use Shared'Object_Dir & "/xcb";

  package Builder renames Shared.Builder;
  package Compiler is
     for Local_Configuration_Pragmas use "pragmas.adc";
     for Default_Switches ("Ada") use Shared.Compiler'Default_Switches ("Ada");
     for Default_Switches ("C") use Shared.Compiler'Default_Switches ("C");
     for Default_Switches ("C") use Shared.Compiler'Default_Switches ("C");
  end Compiler;
  package Binder renames Shared.Binder;
  package Linker renames Shared.Linker;
end XCB;
