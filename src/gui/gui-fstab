# Similar to /etc/fstab but for Linted sandboxing. Paths are
# interpreted relative to the location Linted chroots to.
#
# <file system>	<mount point>	<type>	<options>
/dev	dev	none	rbind
/home	home	none	rbind	# TODO: This doesn't work with ro,rbind

/tmp	tmp	none	ro,bind	# Allow connecting to X11

proc	proc	proc	ro,nosuid,nodev,noexec,hidepid=2

/etc	etc	none	ro,nosuid,nodev,noexec,bind

/lib	lib	none	ro,nosuid,nodev,bind
/lib32	lib32	none	ro,nosuid,nodev,bind
/lib64	lib64	none	ro,nosuid,nodev,bind 

/usr	usr	none	ro,nosuid,nodev,bind 
