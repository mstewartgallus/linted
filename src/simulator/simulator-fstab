# Similar to /etc/fstab but for Linted sandboxing. Paths are
# interpreted relative to the location Linted chroots to.
#
# <file system>	<mount point>	<type>	<options>
none	var	none	mkdir,nomount
/home	home	none	mkdir,rbind	# TODO: This doesn't work with ro,rbind

../../controller	var/controller	none	mkdir,bind
../../updater	var/updater	none	mkdir,bind
../../log	var/log	none	mkdir,bind

tmpfs	dev	tmpfs	mkdir,nosuid,noexec,mode=700
/dev/null	dev/null	none	touch,bind
/dev/urandom	dev/urandom	none	touch,bind
/dev/tty	dev/tty	none	touch,bind

proc	proc	proc	mkdir,ro,nosuid,nodev,noexec,hidepid=2

/etc	etc	none	mkdir,ro,nosuid,nodev,noexec,bind

/lib	lib	none	mkdir,ro,nosuid,nodev,bind
/lib64	lib64	none	mkdir,ro,nosuid,nodev,bind 

/usr	usr	none	mkdir,ro,nosuid,nodev,bind 

tmpfs	tmp	tmpfs	mkdir,nosuid,noexec,mode=700

/bin	bin	none	mkdir,ro,nosuid,nodev,bind