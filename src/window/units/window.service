[Unit]
Description=Linted-Window Window Creator
Documentation='man:linted-window(6)'

[Service]
ExecStart="${LINTED_WINDOW}"
NoNewPrivileges=true

X-Linted-Files=OPEN:log,wronly OPEN:window-notifier,wronly

X-Linted-Fstab="${LINTED_WINDOW_FSTAB}"
WorkingDirectory=/var

X-Linted-Environment-Whitelist=DISPLAY
