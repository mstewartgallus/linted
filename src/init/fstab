# Similar to /etc/fstab but for Linted sandboxing. Paths are
# interpreted relative to the location Linted chroots to.
#
# <file system>	<mount point>	<type>	<options>
proc	proc	proc	ro,nosuid,nodev,noexec
sys	sys	sysfs	ro,nosuid,nodev,noexec

/dev	dev	none	rbind

tmpfs	var	tmpfs	noexec,nosuid

# Allow connecting to X11
/tmp	tmp	none	ro,bind

# Separate everything else
tmpfs	run	tmpfs	nosuid,noexec
tmpfs	run/lock	tmpfs	nosuid,nodev,noexec
tmpfs	run/shm	tmpfs	nosuid,nodev

/etc	etc	none	ro,bind

/lib	lib	none	ro,bind
/lib32	lib32	none	ro,bind
/lib64	lib64	none	ro,bind

/bin	bin	none	ro,bind
/sbin	sbin	none	ro,bind
/usr	usr	none	ro,bind

/home	home	none	ro,rbind
