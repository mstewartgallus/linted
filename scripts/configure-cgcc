set -e
set -C
set -u

ROOT="$(cd "$(dirname "$0")" && pwd)"
SRC="${ROOT}/.."

exec "${SRC}/configure-defaults"\
     --host x86_64-linux-gnu\
     --disable-shared\
     --enable-debug\
     CC='cgcc -std=c99'\
     CPPFLAGS="-U_FORTIFY_SOURCE -U__OPTIMIZE__ -U_OPTIMIZE_SIZE__"\
     $@
