#! /usr/bin/env sh

set -e
set -C
set -u

# This is not a real verification because our programs are unbounded
# and is only a basic double check.

SCRIPTS="@srcdir@"
BINARY="$1"

shift

: ${LINTED_CBMC:=cbmc}

source_cflags() {
    "${SCRIPTS}/json-cc-flags.py" "${BINARY}"
}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

"${LINTED_CBMC}"\
    --bounds-check\
    --div-by-zero-check\
    --nan-check\
    --pointer-check\
    --unwind 100 --depth 100\
    -DNDEBUG\
    $(source_cflags)\
    $(source_files)\
    $@
