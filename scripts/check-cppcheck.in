set -e
set -C
set -u

go() {
    SCRIPTS="@srcdir@/scripts"
    : ${LINTED_PYTHON:=python3.4}

    for BINARY in $(make -s list-programs)
    do
        "${LINTED_PYTHON}" "${SCRIPTS}/check-cppcheck.py" "${BINARY}"
    done
    wait
 }

go "$@"
