#! /usr/bin/env sh

set -e
set -C
set -u

SCRIPTS="@srcdir@"
BINARY="$1"

: ${LINTED_SPLINT:=splint}

source_cflags() {
    "${SCRIPTS}/json-cc-flags.py" "${BINARY}"
}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

"${LINTED_SPLINT}"\
    -D__linux__\
    +posixstrictlib\
    -type\
    -shadow\
    -nestedextern\
    -globs\
    $(source_cflags)\
    $(source_files)
