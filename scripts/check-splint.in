set -e
set -C
set -u

SCRIPTS="@srcdir@"
BINARY="$1"

: ${LINTED_SPLINT:=splint}

source_cflags() {
    "${SCRIPTS}/json-cc-flags.py" "${BINARY}"
}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

(source_cflags && source_files) | \
xargs --delimiter='\n' -- \
"${LINTED_SPLINT}"\
    -D__linux__\
    -D__unix__\
    -D__amd64__\
    -systemdirs '/usr/include:/usr/include/x86_64-linux-gnu:/usr/lib/clang/3.5/include'\
    +posixstrictlib\
    -type\
    -shadow\
    -nestedextern\
    -globs\
    -mustfreefresh\
    -compdef
