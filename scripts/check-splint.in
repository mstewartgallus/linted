set -e
set -C
set -u

SCRIPTS="@srcdir@"
BINARY="$1"

: ${LINTED_SPLINT:=splint}

source_cflags() {
    "${SCRIPTS}/json-cc-flags.py" "${BINARY}"
}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

"${LINTED_SPLINT}"\
    -D__linux__\
    -D__unix__\
    -D__amd64__\
    -systemdirs '/usr/include:/usr/lib/gcc/x86_64-linux-gnu/4.8.2/include:/usr/lib/gcc/x86_64-linux-gnu/4.8.2/include-fixed'\
    +posixstrictlib\
    -type\
    -shadow\
    -nestedextern\
    -globs\
    -mustfreefresh\
    -compdef\
    $(source_cflags)\
    $(source_files)
