set -e
set -C
set -u

source_cflags() {
    "${SCRIPTS}/json-cc-flags.py" "${BINARY}"
}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

SCRIPTS="@srcdir@"
BINARY="$1"

: ${LINTED_IWYU:=iwyu}

source_files | (while IFS='' read -r II
do
    source_cflags | xargs --delimiter='\n' -- "${LINTED_IWYU}" "${II}"  & :
done

wait
)
