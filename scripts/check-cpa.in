set -e
set -C
set -u

SCRIPTS="@srcdir@"
BINARY="$1"

: ${LINTED_CPA:=cpa.sh}

source_files() {
    "${SCRIPTS}/json-cc-files.py" "${BINARY}"
}

(source_files) | \
xargs --delimiter='\n' -- \
"${LINTED_CPA}"\
    -config scripts/cpa-config
