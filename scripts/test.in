set -e
set -C
set -u

SRCDIR="@top_srcdir@"
ROOT="$(cd "$(dirname "$0")" && pwd)"

: ${LINTED_UNIT_PATH:="\
${SRCDIR}/src/controller/units\
:${SRCDIR}/src/updater/units\
:${SRCDIR}/src/window/units\
:${SRCDIR}/src/linted-simulator/units\
:${SRCDIR}/src/linted-window/units\
:${SRCDIR}/src/linted-gui/units\
:${SRCDIR}/src/linted-drawer/units"}

: ${LINTED_INIT:="${ROOT}/../src/linted-init/linted-init"}
: ${LINTED_MONITOR:="${ROOT}/../src/linted-monitor/linted-monitor"}
: ${LINTED_SANDBOX:="${ROOT}/../src/linted-sandbox/linted-sandbox"}
: ${LINTED_WAITER:="${ROOT}/../src/linted-waiter/linted-waiter"}

: ${LINTED_SIMULATOR_FSTAB:="${SRCDIR}/src/linted-simulator/simulator.fstab"}
: ${LINTED_SIMULATOR:="${ROOT}/../src/linted-simulator/linted-simulator"}

: ${LINTED_GUI_FSTAB:="${SRCDIR}/src/linted-gui/gui.fstab"}
: ${LINTED_GUI:="${ROOT}/../src/linted-gui/linted-gui"}

: ${LINTED_DRAWER_FSTAB:="${SRCDIR}/src/linted-drawer/drawer.fstab"}
: ${LINTED_DRAWER:="${ROOT}/../src/linted-drawer/linted-drawer"}

: ${LINTED_WINDOW:="${ROOT}/../src/linted-window/linted-window"}

export LINTED_UNIT_PATH
export LINTED_INIT
export LINTED_MONITOR
export LINTED_SANDBOX
export LINTED_WAITER
export LINTED_SIMULATOR_FSTAB
export LINTED_SIMULATOR
export LINTED_GUI_FSTAB
export LINTED_GUI
export LINTED_DRAWER_FSTAB
export LINTED_DRAWER
export LINTED_WINDOW

exec "${ROOT}/../src/linted/linted" "$@"
