set -e
set -C
set -u

SRCDIR="@top_srcdir@"
EXEEXT="@EXEEXT@"
ROOT="$(cd "$(dirname "$0")" && pwd)"

: ${LINTED_UNIT_PATH:="\
${SRCDIR}/src/controller/units\
:${SRCDIR}/src/updater/units\
:${SRCDIR}/src/window/units\
:${SRCDIR}/src/linted-window/units"}

: ${LINTED_INIT:="${ROOT}/../src/linted-init/linted-init${EXEEXT}"}
: ${LINTED_MONITOR:="${ROOT}/../src/linted-monitor/linted-monitor${EXEEXT}"}
: ${LINTED_SANDBOX:="${ROOT}/../src/linted-sandbox/linted-sandbox${EXEEXT}"}
: ${LINTED_WAITER:="${ROOT}/../src/linted-waiter/linted-waiter${EXEEXT}"}

: ${LINTED_WINDOW_FSTAB:="${SRCDIR}/src/linted-window/window.fstab"}
: ${LINTED_WINDOW:="${ROOT}/../src/linted-window/linted-window${EXEEXT}"}

export LINTED_UNIT_PATH
export LINTED_INIT
export LINTED_MONITOR
export LINTED_SANDBOX
export LINTED_WAITER
export LINTED_WINDOW_FSTAB
export LINTED_WINDOW

exec "${ROOT}/../src/linted/linted${EXEEXT}" "$@"
